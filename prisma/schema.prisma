generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  username String  @unique
  password String
}

model Barang {
  id          String   @id @default(cuid())
  kodeBarang  String   @unique
  namaBarang  String
  masuk       Masuk[]
  keluar      Keluar[]
}

model Masuk {
  id          String   @id @default(cuid())
  barangId    String
  barang      Barang   @relation(fields: [barangId], references: [id])
  jumlahMasuk Int
  tanggal     DateTime
}

model Keluar {
  id            String   @id @default(cuid())
  barangId      String
  barang        Barang   @relation(fields: [barangId], references: [id])
  jumlahKeluar  Int
  tanggal       DateTime
}
